<ul class="access-item-wrapper collapsed">
  <% tree.each do |facility, facility_info| %>
    <li>
      <div class="access-item collapsed">
        <% initial_tree_depth.times do %>
          <span class="spacer"></span>
        <% end %>

        <%= access_checkbox(
                form,
                "facilities",
                facility,
                page: page,
                checked: facility_info.selected) %>
      </div>
    </li>
  <% end %>
</ul>
