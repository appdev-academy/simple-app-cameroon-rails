<ul class="access-item-wrapper collapsed">
  <% tree.each do |facility, _facility_info| %>
    <li>
      <div class="access-item collapsed">
        <% initial_tree_depth.times do %>
          <span class="spacer"></span>
        <% end %>

        <%= access_checkbox(
                form,
                :facilities,
                facility,
                page: page,
                checked: page.eql?(:edit) && user_being_edited.facility_tree.dig(facility, :full_access)
            ) %>
      </div>
    </li>
  <% end %>
</ul>
